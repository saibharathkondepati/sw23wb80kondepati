extends layout

block content
  h1= title
  p Rows: #{query.rows}, Columns: #{query.cols}
  - var rows = Number(query.rows) 
  - var cols = Number(query.cols) 
  - if(!(Number.isInteger(rows)) || !(Number.isInteger(cols))) {
    p Arguments are not integers
  - }
  - else if(!(rows >= 1 && rows <= 10)) {
    p Range of rows between 1 to 10
  - } 
  - else if(!(cols >= 1 && cols <= 10)) {
    p Range of cols between 1 to 10
  - }
  - else {
    br
    h5 Display table data
    table#outer 
        - for(let i = 0; i <rows; i++) {
            tr#middle 
                - for(let j = 1; j <=cols; j++) {
                - if(i>j){
                    td= 0
                - }
                - else{
                    td= (j-i)
                - }
                - }
        - }
  - }